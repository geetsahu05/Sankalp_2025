<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>College Fest Admin Panel</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .sidebar-link {
            display: flex;
            align-items: center;
            padding: 0.75rem 1rem;
            color: #374151;
            border-radius: 0.5rem;
            transition: all 0.2s;
        }
        .sidebar-link:hover {
            background-color: #eff6ff;
            color: #2563eb;
        }
        .sidebar-link.active {
            background-color: #eff6ff;
            color: #2563eb;
            border-right: 4px solid #2563eb;
        }
        .stat-card {
            background: white;
            border-radius: 0.75rem;
            box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
            border: 1px solid #f3f4f6;
            padding: 1.5rem;
            transition: box-shadow 0.2s;
        }
        .stat-card:hover {
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body class="bg-gray-50">
    <!-- Only show sidebar if user is logged in and currentPage is defined -->
    <% if (typeof currentPage !== 'undefined' && currentPage !== 'login') { %>
    <!-- Sidebar -->
    <div class="flex h-screen">
        <aside class="w-64 bg-white shadow-lg fixed h-full">
            <div class="p-6 border-b border-gray-100">
                <h1 class="text-xl font-bold text-gray-800 flex items-center">
                    <i class="fas fa-graduation-cap text-blue-600 mr-2"></i>
                    College Fest
                </h1>
                <p class="text-sm text-gray-500 mt-1">Admin Panel</p>
            </div>
            
            <nav class="mt-6">
                <a href="/admin" class="sidebar-link <%= typeof currentPage !== 'undefined' && currentPage === 'dashboard' ? 'active' : '' %>">
                    <i class="fas fa-chart-pie mr-3"></i>
                    Dashboard
                </a>
                <a href="/admin/clubs" class="sidebar-link <%= typeof currentPage !== 'undefined' && currentPage === 'clubs' ? 'active' : '' %>">
                    <i class="fas fa-users mr-3"></i>
                    Clubs
                </a>
                <a href="/admin/events" class="sidebar-link <%= typeof currentPage !== 'undefined' && currentPage === 'events' ? 'active' : '' %>">
                    <i class="fas fa-calendar-alt mr-3"></i>
                    Events & Games
                </a>
            </nav>
            
            <div class="absolute bottom-0 w-64 p-4 border-t border-gray-100">
                <div class="flex items-center">
                    <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center">
                        <i class="fas fa-user text-blue-600"></i>
                    </div>
                    <div class="ml-3">
                        <p class="text-sm font-medium text-gray-700">Admin</p>
                        <a href="/admin/logout" class="text-xs text-gray-500 hover:text-blue-600">Logout</a>
                    </div>
                </div>
            </div>
        </aside>

        <!-- Main content -->
        <main class="flex-1 ml-64 overflow-y-auto">
            <div class="p-8">
    <% } else { %>
        <!-- Login page layout (no sidebar) -->
        <div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <% } %>